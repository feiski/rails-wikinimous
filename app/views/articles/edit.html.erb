<h1 class="display-4 text-center rainbow-text">
  Here Comes a New Challenger!
</h1>

<div class="container">
  <%= form_for(@article) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Home page", articles_path %>
  <%= link_to "Back", article_path(@article) %>
</div>
